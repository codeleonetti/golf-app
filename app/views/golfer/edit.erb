<h1> Edit Info </h1>

<br><br><br><br>
    <form method="post" action"/golfer/:id/edit">
        <label> Name: </label>
        <input type="text" name= "name" value="<%= @golfer.name %>"><br/>
        <br><br
        <label> Address: </label>
        <input type="text" name= "hometown" value="<%= @golfer.hometown %>"><br/>
        <br><br>
        <label> Current Handicap: </label>
        <input type="text" name= "handicap" value="<%= @golfer.handicap %>"><br/>
        <br><br>
        <h3> Update username or password </h3>
        <label> Username: </label>
        <input type="text" name="username" value="<%= @golfer.username %>"><br/>
        <br><br>
        <label> Password: </label>
        <input type="password" name="password" value="<%= @golfer.password %>"><br/>
        <br><br>
        <input type ="submit" id = "Save profile changes">
    </form>


